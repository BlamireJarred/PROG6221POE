<Window x:Class="CyberAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Task Assistant" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Cybersecurity Task Assistant" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Chatbot Assistant" FontWeight="Bold" Margin="0,0,0,5"/>
            <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                <TextBlock Name="ChatLog" TextWrapping="Wrap" />
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBox Name="ChatInput" Width="400" Margin="0,0,10,0"/>
                <Button Content="Send" Width="100" Click="SendChat_Click"/>
            </StackPanel>
        </StackPanel>

        <ListBox Name="TaskList"
                 Grid.Row="2"
                 DisplayMemberPath="Display"
                 Margin="0,10,0,10"
                 Height="100"
                 SelectionChanged="TaskList_SelectionChanged"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Complete" Width="100" Margin="5" Click="CompleteTask_Click"/>
            <Button Content="Delete" Width="100" Margin="5" Click="DeleteTask_Click"/>
        </StackPanel>
    </Grid>
</Window>
